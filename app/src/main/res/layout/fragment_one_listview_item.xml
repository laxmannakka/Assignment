<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <TextView
       android:id="@+id/medicene_label"
       android:text="Medicine Name"
       android:layout_marginRight="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/medicinename"
        android:layout_width="match_parent"
        android:hint="paracetomal"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/dose_amout"
        android:layout_alignStart="@+id/dose_amout" />
    <TextView
        android:text="Dose Amount"
        android:id="@+id/dose_amout_label"
        android:layout_below="@+id/medicene_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Dose Amount"
        android:id="@+id/dose_amout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/number_of_times"
        android:layout_alignStart="@+id/number_of_times"
        android:layout_below="@+id/medicinename" />
    <TextView
        android:id="@+id/number_of_dose_label"
        android:text="Number of Times"
        android:layout_below="@+id/dose_amout_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/number_of_times"
        android:text="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dose_amout"
        android:layout_toRightOf="@+id/number_of_dose_label"
        android:layout_toEndOf="@+id/number_of_dose_label"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />
</RelativeLayout>